@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="dual-tokens-container">
  <div class="dual-tokens-wrapper">
    <div class="token-wrapper">
      <img class="token-image" src="@Helper.ToCDN("/images/transparent.png")" data-original="@Helper.ToCDN("/images/home/NeoTokenPolygon.svg")" />
      <span class="token-label">@Localizer["NEO token"]</span>
    </div>

    <div class="token-wrapper">
      <img class="token-image" src="@Helper.ToCDN("/images/transparent.png")" data-original="@Helper.ToCDN("/images/home/GasTokenPolygon.svg")" />
      <span class="token-label">@Localizer["GAS token"]</span>
    </div>
  </div>
  <img class="dot-wall" src="@Helper.ToCDN("/images/transparent.png")" data-original="@Helper.ToCDN("/images/home/DotWall.svg")" />
</div>
